
* {
  margin: 0px;
  padding: 0px;
}
h1 {
  text-align: center;
  color: white;
  align-items: center;
  display: flex;
  justify-content: center;
}
body {
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
}

.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: rgb(0, 0, 0);
}

.box {
  text-align: center;
}

.hours,
.minutes,
.seconds,
.amorpm {
  width: 4em;
  height: 4em;
  background-color: rgb(109, 197, 224);
  padding: 1em;
  margin: 1em;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8px;
  -webkit-border-radius: 8px;
  -moz-border-radius: 8px;
  -ms-border-radius: 8px;
  -o-border-radius: 8px;
  box-shadow: 3px 3px 9px #542682, -3px -3px 9px #8048b8;
}

#hours,
#minutes,
#seconds,
#amorpm {
  font-size: 2em;
  color: white;
}

.box > h1 {
  font-size: 1em;
  color: white;
}
